<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#22d7d7"
    tools:context=".result.ResultActivity">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="STARTNAME"
        android:textSize="23dp"
        android:singleLine="true"
        android:id="@+id/tv_result_Startname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@+id/iv_result_arrow"
        android:layout_alignRight="@+id/tv_result_Endname"
        android:layout_alignEnd="@+id/tv_result_Endname" />

    <ImageView
        android:id="@+id/iv_result_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/image_route_arrow1"
        android:layout_alignTop="@+id/tv_result_Startname"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ENDNAME"
        android:textSize="23dp"
        android:singleLine="true"
        android:id="@+id/tv_result_Endname"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/iv_result_arrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    
    <TextView
        android:id="@+id/totaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="약 48분"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/iv_result_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        >
    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
