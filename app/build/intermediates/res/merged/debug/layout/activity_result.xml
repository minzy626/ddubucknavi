<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#22d7d7"
    tools:context=".result.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STARTNAME"
        android:textSize="20dp"
        android:id="@+id/tv_result_Startname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/iv_result_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/image_route_arrow1"
        android:layout_alignTop="@+id/tv_result_Startname"
        android:layout_toLeftOf="@+id/btn_result_home"
        android:layout_toStartOf="@+id/btn_result_home" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENDNAME"
        android:textSize="20dp"
        android:id="@+id/tv_result_Endname"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_result_map"
        android:layout_toStartOf="@+id/btn_result_map" />

    <TextView
        android:id="@+id/totaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:text="약 48분"
        android:textColor="#ff0000"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_result"
        android:background="@drawable/com_rounded_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/iv_result_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </android.support.v7.widget.RecyclerView>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_result_home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="지도"
        android:id="@+id/btn_result_map"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignBottom="@+id/btn_result_home"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
